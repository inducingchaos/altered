{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    },
    "globalEnv": ["DATABASE_URL", "BETTER_AUTH_URL", "BETTER_AUTH_SECRET", "AUTH_GOOGLE_ID", "AUTH_GOOGLE_SECRET"],
    "globalPassThroughEnv": ["NODE_ENV"]
}
