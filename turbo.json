{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "globalPassThroughEnv": ["VERCEL_ENV", "VERCEL_URL", "VERCEL_BRANCH_URL", "VERCEL_PROJECT_PRODUCTION_URL", "NODE_ENV", "PORT"],
    "globalDependencies": [".env.*", ".env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env.*", ".env"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "db:push": {
            "cache": false,
            "interactive": true
        },
        "db:studio": {
            "persistent": true,
            "cache": false
        }
    }
}
